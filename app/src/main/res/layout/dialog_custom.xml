<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:orientation="vertical"
    android:background="@drawable/round_corror_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/alertimg"
        app:tint="#CFC2B2" />
    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"/>

    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:text="@string/dialog_msg"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#5C5959"
        android:textSize="@dimen/_14sdp"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/negBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/dialog_neg_btn_bg"
        android:text="Cancel"
        android:layout_marginRight="@dimen/_30sdp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/posBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/dialog_pos_btn_bg"
        android:text="Delete!" />
    </LinearLayout>

</LinearLayout>